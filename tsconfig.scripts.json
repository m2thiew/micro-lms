{
  // Opzioni per compilare gli script typescript in modo automatico.
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["ES2022"],
    "baseUrl": "./scripts"
  },
  "include": ["./scripts/*.ts", "./scripts/*.mts"],
  "watchOptions": {
    "excludeDirectories": ["./appunti", "./prisma", "./dist", "./node_modules", "./src"]
  }
}
